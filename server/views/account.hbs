{{!< main}}
<section id="account">
    <div class="row">
        <div class="large-12 columns">
            <h3>User data</h3>
            <form class="custom">
                <div id="errors"></div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Bruker-id:</label></div>
                    <div class="large-10 small-9 columns">{{user.userId}}</div>
                </div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Brukernavn:</label></div>
                    <div class="large-10 small-9 columns">{{user.username}}</div>
                </div>
                <div class="row">
                    <div class="large-2 small-3 columns"><label class="right inline">Passord:</label></div>
                    <div class="large-10 small-9 columns"><input type="text" name="name" value="{{user.password}}" /></div>
                </div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Active:</label></div>
                    <div class="large-10 small-9 columns">
                        <input type="checkbox" name="active" value="active" {{#if user.is_active}}checked{{/if}} disabled/>
                        <span class="custom checkbox"></span>
                    </div>
                </div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Admin:</label></div>
                    <div class="large-10 small-9 columns">
                        <input type="checkbox" name="admin" value="admin" {{#if user.is_admin}}checked{{/if}} disabled/>
                        <span class="custom checkbox"></span>
                    </div>
                </div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Created:</label></div>
                    <div class="large-10 small-9 columns">{{user.created}}</div>
                </div>
                <div class="row listair">
                    <div class="large-10 large-offset-2 small-9 small-offset-3 columns"><a id="savebtn" class="button small">Save</a></div>
                </div>
            </form>
        </div>
    </div>
</section>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="http://localhost:8888/nowjs/now.js"></script>
<script type="text/javascript">
  now.ready(function(){
    // "Hello World!" will print on server
    now.logStuff("Hello World!");
    console.log(now);
  });
</script>

{{#content "footer"}}
<script>
$(document).s7n.initAccount();
</script>
{{/content}}
