{{!< main}}
<section id="account">
    <div class="row contentbox">
        <div class="large-12 columns">
            <h3>Min Brukerkonto</h3>
            <form class="custom" action="/account" method="POST">
                <div id="error" {{#if error}} class="error" {{/if}}>{{error}}</div>
                <div id="message" {{#if message}} class="message" {{/if}}>{{message}}</div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Bruker-id:</label></div>
                    <div class="large-10 small-9 columns">{{user.userId}}</div>
                </div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Brukernavn:</label></div>
                    <div class="large-10 small-9 columns">{{user.username}}</div>
                </div>
                <div class="row">
                    <div class="large-2 small-3 columns"><label class="right inline">Endre passord:</label></div>
                    <div class="large-4 small-9 columns left"><input type="password" name="oldpassword" placeholder="Gammelt passord"/></div>
                </div>
                <div class="row">
                    <div class="large-4 large-offset-2 small-9 small-offset-3 columns left"><input type="password" name="newpassword" placeholder="Nytt passord"/></div>
                </div>
                <div class="row">
                    <div class="large-4 large-offset-2 small-9 small-offset-3 columns left"><input type="password" name="newpassword2" placeholder="Gjenta nytt passord"/></div>
                </div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Aktiv:</label></div>
                    <div class="large-10 small-9 columns">
                        <input type="checkbox" name="active" value="active" {{#if user.is_active}}checked{{/if}} disabled/>
                        <span class="custom checkbox"></span>
                    </div>
                </div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Admin:</label></div>
                    <div class="large-10 small-9 columns">
                        <input type="checkbox" name="admin" value="admin" {{#if user.is_admin}}checked{{/if}} disabled/>
                        <span class="custom checkbox"></span>
                    </div>
                </div>
                <div class="row listair">
                    <div class="large-2 small-3 columns"><label class="right">Laget:</label></div>
                    <div class="large-10 small-9 columns">{{datetimeformat user.created}}</div>
                </div>
                <div class="row listair">
                    <div class="large-10 large-offset-2 small-9 small-offset-3 columns">
                        <input type="submit" value="Lagre" class="button small" />
                        <!-- <a id="savebtn" class="button small">Save</a> -->
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
